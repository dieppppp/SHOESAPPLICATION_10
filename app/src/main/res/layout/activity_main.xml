<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

<LinearLayout
    android:background="#F6F3F3"
    android:orientation="vertical"
    android:id="@+id/top"
    android:layout_width="match_parent"
    android:layout_height="120dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="300dp"
                android:paddingHorizontal="20dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_oto"
                android:drawableStart="@drawable/ic_search_black_24dp"
                android:drawableEnd="@drawable/baseline_linked_camera_24"
                android:text="Enter search">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btnsearch"
                android:text="Search" />


        </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"

        android:layout_marginTop="280dp">

        <ImageView
            android:id="@+id/img_search"
            android:layout_width="100dp"
            android:layout_height="92dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_search_black_24dp">

        </ImageView>

            <TextView
                android:id="@+id/text_1"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:gravity="center"
                android:text="TENSHOES search"
                android:textColor="#0C0101"
                android:textSize="25sp">

            </TextView>
        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="find infomation quickly with TENSHOES"
            android:textColor="#0C0101"
            android:textSize="20sp">

        </TextView>



    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center"
            android:background="#F6F3F3"
            android:orientation="horizontal"
            android:layout_marginTop="717dp">
            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_home_black_24dp">
                </ImageView>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:id="@+id/home"
                    android:gravity="center"
                    android:text="Home"
                    android:textColor="#0B0000"
                    android:textSize="15sp"
                    android:layout_marginTop="-15dp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_account_circle_black_24dp">
                </ImageView>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:id="@+id/account"
                    android:gravity="center"
                    android:text="Accout"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:layout_marginTop="-15dp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_search_black_24dp">
                </ImageView>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:id="@+id/search"
                    android:gravity="center"
                    android:text="Search"
                    android:textColor="#EC0808"
                    android:textSize="15sp"
                    android:layout_marginTop="-15dp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_notifications__black_24dp">
                </ImageView>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:id="@+id/notification"
                    android:gravity="center"
                    android:text="Notification"
                    android:textColor="#0B0000"
                    android:textSize="15sp"
                    android:layout_marginTop="-15dp">
                </TextView>
            </LinearLayout>



        </LinearLayout>
    </RelativeLayout>

