<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="#F6F3F3"
        android:orientation="horizontal"
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nofications"
                android:textSize="40dp"
                android:textStyle="bold"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/cart"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp">

            </ImageView>
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/messenger"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="32dp">

            </ImageView>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:background="#F6F3F3"
        android:id="@+id/top2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/top"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/voucher">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="16dp"
                android:text="Promotion"
                android:textSize="30dp"
                android:textStyle="bold">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               android:layout_marginLeft="22dp"
                android:text="Great selling deal and free shipping">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center">

            </LinearLayout>
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_arrow_right_24dp">
                </ImageView>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/top2"
        android:background="#595555"
        >

    </View>

    <LinearLayout
        android:background="#F6F3F3"
        android:id="@+id/top3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/top2"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">
        <LinearLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:gravity="center">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/cart">

        </ImageView>
    </LinearLayout>
        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="16dp"
                android:text="Super sale"
                android:textSize="30dp"
                android:textStyle="bold">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="22dp"
                android:text="Hunt for sale with TENSHOES"
                android:layout_marginTop="5dp">

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center">

            </LinearLayout>
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_arrow_right_24dp">
                </ImageView>

            </LinearLayout>

        </LinearLayout>




    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/top3"
        android:background="#595555"
        > </View>

    <LinearLayout
        android:background="#F6F3F3"
        android:id="@+id/top4"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/top3"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_favorite_border_black_24dp">

            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="16dp"
                android:text="Favorite"
                android:textSize="30dp"
                android:textStyle="bold">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="22dp"
                android:text="Top favorite products  "
                android:layout_marginTop="8dp">

            </TextView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center">

            </LinearLayout>
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_arrow_right_24dp">
                </ImageView>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/top4"
        android:background="#595555"
        > </View>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/top5"
        android:layout_below="@+id/top4">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
           >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Update oders"
                android:layout_marginLeft="20dp"
                android:gravity="center">

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Real all"
                android:layout_marginLeft="200dp"
                android:gravity="center"
                >

            </TextView>

        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:id="@+id/top6"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/top5"
        android:layout_marginTop="2dp"
        android:background="#F6F3F3"

        android:orientation="vertical">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/handbag">
        </ImageView>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="125dp"
            android:background="@drawable/btn_nofication"
            android:gravity="center"
            android:text="Shop now"
            android:textColor="#FF0000"
            android:layout_marginTop="15dp">

        </androidx.appcompat.widget.AppCompatButton>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="center"
        android:background="#F6F3F3"
        android:orientation="horizontal"
        android:layout_marginTop="717dp">
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_home_black_24dp">
            </ImageView>
            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:id="@+id/home"
                android:gravity="center"
                android:text="Home"
                android:textColor="#0B0000"
                android:textSize="15sp"
                android:layout_marginTop="-15dp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_account_circle_black_24dp">
            </ImageView>
            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:id="@+id/account"
                android:gravity="center"
                android:text="Accout"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_marginTop="-15dp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_search_black_24dp">
            </ImageView>
            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:id="@+id/search"
                android:gravity="center"
                android:text="Search"
                android:textColor="#0E0000"
                android:textSize="15sp"
                android:layout_marginTop="-15dp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_notifications__black_24dp">
            </ImageView>
            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:id="@+id/notification"
                android:gravity="center"
                android:text="Notification"
                android:textColor="#BF0F0F"
                android:textSize="15sp"
                android:layout_marginTop="-15dp">
            </TextView>
        </LinearLayout>



    </LinearLayout>


</RelativeLayout>